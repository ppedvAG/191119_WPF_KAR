<Window x:Class="Lokalisierung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lokalisierung"
        mc:Ignorable="d"
        
        
        xmlns:p="clr-namespace:Lokalisierung.Properties"
        
        
        
        Title="{x:Static p:Resources.windowTitle}" Height="193.467" Width="240">
    
    <!-- Resources.resx: Ganz oben in der Mitte den Zugriff auf public stellen !!!!!!!!!!!!! -->
    <StackPanel Margin="10" x:Name="stackPanelDemo">
        <Label Content="{x:Static p:Resources.labelUsernameText}"/>
        <TextBox/>
        <Label Content="{x:Static p:Resources.labelPasswordText}"/>
        <PasswordBox/>
        <Button Content="{x:Static p:Resources.buttonLoginText}" Click="Button_Click"/>
    </StackPanel>
</Window>
