<Window x:Class="DarkmodeTaschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarkmodeTaschenrechner"
        mc:Ignorable="d"
        Title="Taschenrechner" Height="450" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Zahl1 " Grid.Row="0" Grid.Column="0"/>
        <Label Content="Zahl2: " Grid.Row="1" Grid.Column="0"/>

        <TextBox x:Name="textBoxZahl1" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="2"/>
        <TextBox x:Name="textBoxZahl2" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="2"/>

        <Button x:Name="buttonAdd" Content="+" Grid.Row="2" Grid.Column="0"/>
        <Button x:Name="buttonSub" Content="-" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="buttonMul" Content="*" Grid.Row="2" Grid.Column="2"/>
        <Button x:Name="buttonDiv" Content="/" Grid.Row="2" Grid.Column="3"/>

        <Label Content="Ergebnis:" Grid.Row="3" Grid.Column="0"/>
        <TextBox x:Name="textBoxErgebnis" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Image x:Name="imageMode" Height="50" Width="50" Grid.Row="4" Grid.Column="3"/>
    </Grid>
</Window>
